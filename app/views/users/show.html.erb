<%= render 'shared/user', user: @current_user%>
<div><%=@current_user.bio%></div>

<ul>
  <% for post_i in 0...3 do %>
    <p><%='No posts' if !@current_user.posts[0]%></p>
    <% break if !@current_user.posts[post_i]%>
      <li>
        <%=render 'shared/post', post: @current_user.posts[post_i]%>
      </li>
    <%end%>
</ul>

<div><%= link_to "See all posts", user_posts_path(@current_user) %></div>
