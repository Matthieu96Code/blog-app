<%= render 'shared/user', user: @current_user%>
<section class="bio-section">
  <h2>Bio</h2>
  <div class="bio-description"><%=@current_user.bio%></div>
</section>

<section class="posts-section">
  <ul>
    <% for post_i in 0...3 do %>
      <p><%='No posts' if !@current_user.posts[0]%></p>
      <% break if !@current_user.posts[post_i]%>
        <li class="post-card">
          <%=render 'shared/post', post: @current_user.posts[post_i]%>
        </li>
      <%end%>
  </ul>
</section >

<button class="all-posts"><%= link_to "See all posts", user_posts_path(@current_user) %></button>
